<Window x:Class="Task_Examples.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_Examples"
        mc:Ignorable="d"
        Title="Gerenciando Tasks" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="83*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="Sincrono_Metodo" Content="Metodo Sincrono&#xD;&#xA;" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="772" Height="69" Click="Sincrono_Metodo_Click" Grid.ColumnSpan="2"/>
        <Button x:Name="Assincrono_Metodo" Content="Metodo Assincrono&#xA;" HorizontalAlignment="Left" Margin="10,84,0,0" VerticalAlignment="Top" Width="772" Height="69" Click="Assincrono_Metodo_Click" Grid.ColumnSpan="2"/>
        <TextBox x:Name="Resultado" HorizontalAlignment="Left" Height="177" Margin="10,232,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="772" Grid.ColumnSpan="2"/>
        <Button x:Name="Paralelo_Metodo" Content="Metodo Paralelo&#xA;" HorizontalAlignment="Left" Margin="10,158,0,0" VerticalAlignment="Top" Width="772" Height="69" Click="Paralelo_Metodo_Click" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
